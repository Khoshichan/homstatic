!!!
%html
  %head
    %title Dmitry Demenchuk \ Web Developer
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}

    / Vendor
    %link{href: "//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css", rel: "stylesheet"}
    %link{href: "//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css", rel: "stylesheet"}
    %link{href: "//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css", rel: "stylesheet"}

    = render 'partials/googleanalytics'.to_sym
    = render 'partials/stylesheets'.to_sym
  %body{onload: "prettyPrint()"}
    = render 'partials/forkme'.to_sym
    .container
      .page-header
        %h1
          %a{href:'/'} Dmitry Demenchuk
          =render 'partials/navigation'.to_sym

      = yield

      %hr
      %footer.footer
        %a{:href => 'http://demenchuk.me'}
          %img{:src => "/images/signature.png"}

    / jQuery (necessary for Bootstrap's JavaScript plugins)
    %script{src: "//code.jquery.com/jquery.js"}
    / Include all compiled plugins (below), or include individual files as needed
    %script{src: "//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"}
