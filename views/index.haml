.row-fluid
  #about.span2
    %img.img-thumbnail{:src => "/images/demenchuk.jpg"}

    %blockquote
      %small I'm a Software Engineer with over 5 years of experience in web development.

  .span10
    = render :'partials/technology'

    %hr
    .progress.progress-striped
      - Demenchuk::SKILLS.select{|s| s[:percentage]}.each_with_index do |skill, i|
        .progress-bar{class: "progress-bar-#{%w(info success danger)[i]}", :style => "width: #{skill[:percentage]};"}= skill[:name]

= render :'partials/skills', locals: { content: Demenchuk::SKILLS }

